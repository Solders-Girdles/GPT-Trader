server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/promtail-positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push

scrape_configs:
  - job_name: coinbase_trader_events
    static_configs:
      - targets: [localhost]
        labels:
          job: coinbase_trader
          __path__: /path/to/repo/runtime_data/prod/events.jsonl
          # events.db is canonical; JSONL is legacy fallback
    pipeline_stages:
      - json:
          expressions:
            event_type: event_type
            level: level
            symbol: symbol
      - labels:
          event_type: event_type
          level: level
          symbol: symbol
