MarketWatchWidget {
    layout: vertical;
    height: 1fr;
    padding: 0 $spacing-md; /* Consistent horizontal padding */
}

MarketWatchWidget DataTable {
    height: 1fr;
    padding: $spacing-sm $spacing-md; /* Increased padding for readability */
}

