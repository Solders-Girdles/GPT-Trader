{
  "title": "Trading Activity",
  "tags": [
    "trading-bot",
    "orders",
    "errors"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Order Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "(rate(bot_order_attempts_total{profile=\"production\",status=\"success\"}[5m]) / (rate(bot_order_attempts_total{profile=\"production\",status=\"attempted\"}[5m]) + 0.001)) * 100",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 80,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Order Attempts",
      "type": "stat",
      "gridPos": {
        "h": 3,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(bot_order_attempts_total{profile=\"production\"})",
          "legendFormat": "Total Orders",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "blue"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Total Errors",
      "type": "stat",
      "gridPos": {
        "h": 3,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(bot_errors_total{profile=\"production\"})",
          "legendFormat": "Total Errors",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 10,
                "color": "yellow"
              },
              {
                "value": 50,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Order Rate (5m avg)",
      "type": "stat",
      "gridPos": {
        "h": 3,
        "w": 8,
        "x": 8,
        "y": 3
      },
      "targets": [
        {
          "expr": "rate(bot_order_attempts_total{profile=\"production\",status=\"attempted\"}[5m]) * 60",
          "legendFormat": "Orders/min",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "yellow"
              },
              {
                "value": 0.1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Error Rate (5m avg)",
      "type": "stat",
      "gridPos": {
        "h": 3,
        "w": 8,
        "x": 16,
        "y": 3
      },
      "targets": [
        {
          "expr": "rate(bot_errors_total{profile=\"production\"}[5m]) * 60",
          "legendFormat": "Errors/min",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 0.5,
                "color": "yellow"
              },
              {
                "value": 2,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Order Attempts by Status",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "expr": "rate(bot_order_attempts_total{profile=\"production\",status=\"attempted\"}[5m])",
          "legendFormat": "Attempted",
          "refId": "A"
        },
        {
          "expr": "rate(bot_order_attempts_total{profile=\"production\",status=\"success\"}[5m])",
          "legendFormat": "Success",
          "refId": "B"
        },
        {
          "expr": "rate(bot_order_attempts_total{profile=\"production\",status=\"failed\"}[5m])",
          "legendFormat": "Failed",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Orders/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "nullPointMode": "null",
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      },
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "total": true
      }
    },
    {
      "id": 7,
      "title": "Error Rate by Component",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "expr": "rate(bot_errors_total{profile=\"production\"}[5m])",
          "legendFormat": "{{component}} - {{severity}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Errors/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "nullPointMode": "null",
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      },
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "total": true
      }
    },
    {
      "id": 8,
      "title": "Errors by Component (Breakdown)",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "expr": "bot_errors_total{profile=\"production\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "profile": true,
              "__name__": true
            },
            "renameByName": {
              "component": "Component",
              "severity": "Severity",
              "Value": "Count"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Count",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Count"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "value": 0,
                      "color": "green"
                    },
                    {
                      "value": 5,
                      "color": "yellow"
                    },
                    {
                      "value": 20,
                      "color": "red"
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 9,
      "title": "Order Status Distribution",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "targets": [
        {
          "expr": "sum by(status) (bot_order_attempts_total{profile=\"production\"})",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "pieType": "pie",
        "displayLabels": [
          "name",
          "percent"
        ],
        "legend": {
          "show": true,
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    }
  ],
  "uid": "trading-activity"
}
