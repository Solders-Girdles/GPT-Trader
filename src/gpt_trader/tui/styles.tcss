/* Nord Theme Colors - Refined */
$nord0: #2e3440;
$nord1: #3b4252;
$nord2: #434c5e;
$nord3: #4c566a;
$nord4: #d8dee9;
$nord5: #e5e9f0;
$nord6: #eceff4;
$nord7: #8fbcbb;
$nord8: #88c0d0;
$nord9: #81a1c1;
$nord10: #5e81ac;
$nord11: #bf616a;
$nord12: #d08770;
$nord13: #ebcb8b;
$nord14: #a3be8c;
$nord15: #b48ead;

/* Global Styles */
Screen {
    layout: vertical;
    background: $nord0;
    color: $nord4;
}

Label {
    color: $nord4;
}

/* Typography & Utilities */
.text-success {
    color: $nord14;
}

.text-error {
    color: $nord11;
}

.text-warning {
    color: $nord13;
}

.text-info {
    color: $nord8;
}

.text-muted {
    color: $nord3;
}

.bold {
    text-style: bold;
}

/* Header & Footer */
Header {
    dock: top;
    height: 1;
    background: $nord1;
    color: $nord4;
}

Footer {
    dock: bottom;
    height: 1;
    background: $nord1;
    color: $nord4;
}

/* Tabs */
Tabs {
    background: $nord1;
    color: $nord4;
    dock: top;
    height: 3;
}

Tab {
    padding: 1 2;
}

Tab.-active {
    background: $nord2;
    color: $nord8;
    text-style: bold;
    border-bottom: solid $nord8;
}

/* Content Areas */
ContentSwitcher {
    background: $nord0;
    height: 1fr;
}

#dashboard-container, #market-container, #positions-container, #system-container {
    padding: 1;
    height: 1fr;
}

/* Dashboard Grid */
#dashboard-container {
    layout: grid;
    grid-size: 2 2;
    grid-columns: 1fr 1fr;
    grid-rows: 1fr 1fr;
    grid-gutter: 1;
}

.dashboard-item {
    border: solid $nord3;
    background: $nord1;
    padding: 1;
}

/* Status Bar */
#bot-status-header {
    dock: top;
    height: 3;
    background: $nord1;
    color: $nord4;
    border-bottom: solid $nord8;
    layout: horizontal;
    align-vertical: middle;
    padding: 0 1;
}

.status-value {
    color: $nord8;
    text-style: bold;
}

.status-running {
    color: $nord14; /* Green */
}

.status-stopped {
    color: $nord11; /* Red */
}

/* DataTable Overrides */
DataTable {
    background: $nord1;
    color: $nord4;
    border: none;
    padding: 0 1;
}

DataTable > .datatable--header {
    background: $nord2;
    color: $nord8;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $nord3;
    color: $nord6;
}

/* Log Widget */
Log {
    background: $nord1;
    color: $nord4;
    border: solid $nord3;
    padding: 0 1;
}

/* Specific Widget Styles */
AccountWidget {
    layout: vertical;
    padding: 1;
}

.account-metric {
    background: $nord2;
    border: solid $nord3;
    padding: 1;
    margin: 1;
    height: auto;
}

.account-metric-label {
    color: $nord9;
    text-style: bold;
}

.account-metric-value {
    color: $nord6;
    text-style: bold;
    text-align: right;
}
