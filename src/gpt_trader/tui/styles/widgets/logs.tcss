/* ========================================================================== */
/* LOGS WIDGET - Enhanced Styling                                             */
/* ========================================================================== */

/* === Log Container === */

#dash-logs {
    width: 100%;
    height: 1fr;  /* Fill logs-row */
    background: $bg-primary;
}

/* === Log Header - Professional & Refined === */

LogWidget .log-header {
    layout: horizontal;
    height: 3;
    background: $bg-elevated;
    border-left: wide $accent; /* Accent border for visual hierarchy */
    border-bottom: solid $border-emphasis; /* Stronger separator */
    padding: 0 $spacing-md; /* Increased padding */
    align: left middle;
}

LogWidget .log-title {
    height: 3;
    width: auto;
    min-width: 5;
    color: $text-primary;
    text-style: bold;
    background: transparent;
    border: none;
    padding: 0 $spacing-sm; /* Increased padding */
    content-align: left middle;
}

LogWidget .log-level-select {
    height: 3;
    width: 12;
    margin: 0 1;
}

LogWidget .log-filter {
    height: 3;
    width: 16;
    min-width: 10;
    max-width: 20;
}

LogWidget .log-sep {
    color: $border-subtle;
    height: 3;
    width: 1;
    content-align: center middle;
    margin: 0 2;
}

/* === Inline Statistics - Grouped with subtle background === */

LogWidget .stat {
    height: 3;
    min-width: 4;
    padding: 0 1;
    margin: 0;
    content-align: center middle;
    text-style: bold;
    background: $bg-secondary;
}

LogWidget .stat-error {
    color: $error;
    padding: 0 1;
}

LogWidget .stat-warning {
    color: $warning;
    padding: 0 1;
}

LogWidget .stat-info {
    color: $success;
    padding: 0 1;
}

/* === RichLog Display - Enhanced === */

LogWidget {
    background: $bg-secondary;
}

/* Embedded look: minimal borders/headers */
LogWidget .log-header {
    background: $bg-elevated;
    border-bottom: solid $border-subtle;
    color: $text-secondary;
}

LogWidget RichLog {
    background: $bg-secondary;
    color: $text-primary;
}

/* === Log Component (legacy) === */

Log {
    background: $bg-secondary;
    color: $text-primary;
    border: solid $border-subtle;
    border-left: thick $accent-muted;
    padding: 0 $spacing-xs;
}

/* === Full-Width Logs Styling === */

.full-width-logs {
    /* Expanded log display with horizontal space */
    /* Note: max_lines is configured in LogWidget Python code, not CSS */
}

.log-expand-hint {
    color: $text-muted;
    text-style: italic;
    text-align: center;
    padding: 0 $spacing-xs;
    background: $bg-elevated;
}

/* === Pause Indicator - Subtle === */

LogWidget .pause-indicator {
    color: $warning-dim;               /* Refined: desaturated */
    background: $warning-muted;
    text-style: bold;
    padding: 0 1;
    margin-left: 1;
    display: none;
}

LogWidget .pause-indicator.visible {
    display: block;
}

/* === RichLog Layout === */

LogWidget RichLog {
    height: 1fr;
    min-height: 5;
}
