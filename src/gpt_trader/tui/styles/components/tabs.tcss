/* ========================================================================== */
/* TABS - Professional Styling                                               */
/* ========================================================================== */

Tabs {
    background: transparent;
    color: $text-primary;
    dock: top;
    height: 2;
    border-bottom: none;
}

Tab {
    padding: 0 2;
    margin-right: 1;
    border: none;
}

Tab.-active {
    background: transparent;
    color: $accent;
    text-style: bold;
    border-bottom: wide $accent;
    border-top: none;
}
