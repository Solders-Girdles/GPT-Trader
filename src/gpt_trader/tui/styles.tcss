/* Nord Theme Colors - Refined */
$nord0: #2e3440;
$nord1: #3b4252;
$nord2: #434c5e;
$nord3: #4c566a;
$nord4: #d8dee9;
$nord5: #e5e9f0;
$nord6: #eceff4;
$nord7: #8fbcbb;
$nord8: #88c0d0;
$nord9: #81a1c1;
$nord10: #5e81ac;
$nord11: #bf616a;
$nord12: #d08770;
$nord13: #ebcb8b;
$nord14: #a3be8c;
$nord15: #b48ead;

/* Global Styles */
Screen {
    layout: vertical;
    background: $nord0;
    color: $nord4;
}

Label {
    color: $nord4;
}

/* Typography & Utilities */
.text-success {
    color: $nord14;
}

.text-error {
    color: $nord11;
}

.text-warning {
    color: $nord13;
}

.text-info {
    color: $nord8;
}

.text-muted {
    color: $nord3;
}

.bold {
    text-style: bold;
}

/* Header & Footer */
Header {
    dock: top;
    height: 1;
    background: $nord1;
    color: $nord4;
}

Footer {
    dock: bottom;
    height: 1;
    background: $nord1;
    color: $nord4;
}

/* Tabs */
Tabs {
    background: $nord1;
    color: $nord4;
    dock: top;
    height: 3;
}

Tab {
    padding: 1 2;
}

Tab.-active {
    background: $nord2;
    color: $nord8;
    text-style: bold;
    border-bottom: solid $nord8;
}

/* Content Areas */
ContentSwitcher {
    background: $nord0;
    height: 1fr;
}

#dashboard-container, #market-container, #positions-container, #system-container {
    padding: 1;
    height: 1fr;
}

/* Main Workspace Layout */
#main-workspace {
    layout: vertical;
    height: 100%;
}

/* Top Section: Trading & Execution */
#trading-section {
    height: 70%;
    layout: horizontal;
    border-bottom: solid $nord3;
}

#market-column {
    width: 50%;
    height: 100%;
    border-right: solid $nord3;
    layout: vertical;
}

#execution-column {
    width: 50%;
    height: 100%;
    layout: vertical;
}

/* Bottom Section: Monitoring & Logs */
#monitoring-section {
    height: 30%;
    layout: horizontal;
}

#system-column {
    width: 40%;
    height: 100%;
    border-right: solid $nord3;
    layout: vertical;
}

#logs-column {
    width: 60%;
    height: 100%;
}

/* Dashboard Items */
.dashboard-item {
    height: 1fr;
    border: none;
    background: $nord1;
    padding: 0;
}

.dashboard-item {
    border: solid $nord3;
    background: $nord1;
    padding: 1;
}

/* Status Bar */
#bot-status-header {
    dock: top;
    height: 5;
    background: $nord1;
    color: $nord4;
    border-bottom: solid $nord8;
    padding: 0;
}

#status-bar-container {
    height: 100%;
    align-vertical: middle;
}

.status-section {
    padding: 0 2;
    height: 100%;
    align-vertical: middle;
}

#bot-controls {
    width: auto;
    border-right: solid $nord3;
}

#status-info {
    width: 1fr;
    border-right: solid $nord3;
}

#performance-metrics {
    width: auto;
}

.status-row {
    height: auto;
    align-vertical: middle;
    margin-bottom: 0;
}

.status-label {
    color: $nord9;
    text-style: bold;
    margin-right: 1;
}

.status-value {
    color: $nord6;
    text-style: bold;
    margin-right: 2;
}

.status-running {
    color: $nord14; /* Green */
}

.status-stopped {
    color: $nord11; /* Red */
}

/* Heartbeat Indicator */
.heartbeat-pulse {
    margin-left: 1;
}

.heartbeat-bright {
    color: $nord14; /* Green - active pulse */
    text-style: bold;
}

.heartbeat-dim {
    color: $nord3; /* Grey - dim state */
}

.pnl-positive {
    color: $nord14; /* Green */
}

.pnl-negative {
    color: $nord11; /* Red */
}

.pnl-neutral {
    color: $nord4;
}

/* Button Styling */
Button {
    min-width: 12;
    margin: 0 1;
}

.button-group {
    align-vertical: middle;
    height: 100%;
}

Button:hover {
    text-style: bold;
}

Button.-disabled {
    opacity: 0.5;
}

/* DataTable Overrides */
DataTable {
    background: $nord1;
    color: $nord4;
    border: none;
    padding: 0 1;
}

DataTable > .datatable--header {
    background: $nord2;
    color: $nord8;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $nord3;
    color: $nord6;
}

/* Log Widget */
Log {
    background: $nord1;
    color: $nord4;
    border: solid $nord3;
    padding: 0 1;
}

/* Specific Widget Styles */
AccountWidget {
    layout: vertical;
    padding: 1;
}

.account-metric {
    background: $nord2;
    border: solid $nord3;
    padding: 1;
    margin: 1;
    height: auto;
}

.account-metric-label {
    color: $nord9;
    text-style: bold;
}

.account-metric-value {
    color: $nord6;
    text-style: bold;
    text-align: right;
}

/* Block Chart */
BlockChartWidget {
    height: 5;
    padding: 0 1;
    border-top: solid $nord3;
}

.chart-content {
    height: 3;
    color: $nord14;
}

/* Contextual Footer */
ContextualFooter {
    dock: bottom;
    height: 1;
    background: $nord1;
    border-top: solid $nord8;
}

#contextual-footer {
    height: 100%;
    align-vertical: middle;
    padding: 0 1;
}

.footer-group {
    margin-right: 2;
    align-vertical: middle;
}

.footer-group-right {
    dock: right;
}

.footer-key {
    color: $nord8;
    text-style: bold;
    background: $nord3;
    padding: 0 1;
    margin-right: 1;
}

.footer-label {
    color: $nord4;
}

/* Widget Headers */
.header {
    color: $nord8;
    text-style: bold;
    text-align: center;
    background: $nord2;
    padding: 0 1;
    border-bottom: solid $nord3;
}

/* Empty States */
.empty-state {
    color: $nord3;
    text-style: italic;
    text-align: center;
    padding: 2;
    display: none; /* Hidden by default */
}
