{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BotConfig",
  "type": "object",
  "properties": {
    "max_position_size": {
      "type": "string",
      "format": "decimal",
      "description": "Maximum position size in quote currency (e.g., USD)",
      "default": "1000"
    },
    "max_leverage": {
      "type": "integer",
      "default": 5,
      "description": "Maximum leverage multiplier (1-10 typical)"
    },
    "stop_loss_pct": {
      "type": "string",
      "format": "decimal",
      "description": "Stop loss percentage as decimal (0.02 = 2%)",
      "default": "0.02"
    },
    "take_profit_pct": {
      "type": "string",
      "format": "decimal",
      "description": "Take profit percentage as decimal (0.04 = 4%)",
      "default": "0.04"
    },
    "short_ma": {
      "type": "integer",
      "default": 10,
      "description": "Short moving average period in candles"
    },
    "long_ma": {
      "type": "integer",
      "default": 20,
      "description": "Long moving average period in candles"
    },
    "interval": {
      "type": "integer",
      "default": 60,
      "description": "Trading interval in seconds"
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "BTC-USD",
        "ETH-USD"
      ],
      "description": "List of trading symbols (e.g., ['BTC-USD', 'ETH-USD'])"
    },
    "derivatives_enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable perpetual futures trading"
    },
    "trailing_stop_pct": {
      "type": "string",
      "format": "decimal",
      "description": "Trailing stop percentage as decimal",
      "default": "0.01"
    },
    "perps_position_fraction": {
      "type": "string",
      "format": "decimal",
      "description": "Fraction of balance to use for perps positions",
      "default": "0.1"
    },
    "target_leverage": {
      "type": "integer",
      "default": 1,
      "description": "Target leverage for derivatives positions"
    },
    "enable_shorts": {
      "type": "boolean",
      "default": false,
      "description": "Allow short positions"
    },
    "reduce_only_mode": {
      "type": "boolean",
      "default": false,
      "description": "Only allow position-reducing orders"
    },
    "time_in_force": {
      "type": "string",
      "default": "GTC",
      "description": "Order time-in-force: GTC, IOC, FOK"
    },
    "enable_order_preview": {
      "type": "boolean",
      "default": false,
      "description": "Enable order preview before submission"
    },
    "account_telemetry_interval": {
      "type": "integer",
      "nullable": true,
      "description": "Account snapshot interval in seconds (null to disable)"
    },
    "log_level": {
      "type": "string",
      "default": "INFO",
      "description": "Logging level: DEBUG, INFO, WARNING, ERROR"
    },
    "dry_run": {
      "type": "boolean",
      "default": false,
      "description": "Simulate trades without execution"
    },
    "mock_broker": {
      "type": "boolean",
      "default": false,
      "description": "Use mock broker for testing"
    },
    "profile": {
      "description": "Trading profile name or enum"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {},
      "default": {},
      "description": "Additional metadata key-value pairs"
    }
  },
  "description": "BotConfig(max_position_size: decimal.Decimal = Decimal('1000'), max_leverage: int = 5, stop_loss_pct: decimal.Decimal = Decimal('0.02'), take_profit_pct: decimal.Decimal = Decimal('0.04'), short_ma: int = 10, long_ma: int = 20, interval: int = 60, symbols: list[str] = <factory>, derivatives_enabled: bool = False, trailing_stop_pct: decimal.Decimal = Decimal('0.01'), perps_position_fraction: decimal.Decimal = Decimal('0.1'), target_leverage: int = 1, enable_shorts: bool = False, reduce_only_mode: bool = False, time_in_force: str = 'GTC', enable_order_preview: bool = False, account_telemetry_interval: int | None = None, log_level: str = 'INFO', dry_run: bool = False, mock_broker: bool = False, profile: object = None, metadata: dict[str, typing.Any] = <factory>)"
}
