/* Animations & Transitions
 *
 * This module defines all animations and transitions for the TUI.
 * Smooth, delightful micro-interactions that enhance the user experience.
 *
 * Note: Textual's animation support is limited. Some advanced CSS animations
 * may not work and require JavaScript-like implementation in Python.
 */

/* === Global Transition Defaults === */

* {
    transition-duration: 200ms;
    transition-timing-function: ease-out;
}

/* === Component-Specific Transitions === */

Button {
    transition: background 200ms ease, border 200ms ease, transform 100ms ease;
}

DataTable > .datatable--cursor {
    transition: background 150ms ease;
}

.status-value {
    transition: color 300ms ease, background 300ms ease;
}

.heartbeat-pulse {
    margin-left: $spacing-xs;
    transition: opacity 500ms ease-in-out;
}

/* === Loading Spinner === */

/* Note: Unicode Braille spinner (⠋⠙⠹⠸⠼⠴⠦⠧⠇⠏) is animated via Python interval,
 * not CSS animations, for reliable terminal rendering.
 */

LoadingSpinner {
    width: auto;
    height: auto;
    align-horizontal: center;
    align-vertical: middle;
}

#spinner-display {
    color: $accent;
    text-style: bold;
    text-align: center;
}

.loading-spinner {
    color: $accent;
    text-style: bold;
    text-align: center;
}

.loading-message {
    color: $text-secondary;
    text-align: center;
    margin-top: $spacing-xs;
}

.loading-container {
    padding: $spacing-lg;
    background: rgba(58, 53, 48, 0.2);
    border: solid $border-subtle;
    align-horizontal: center;
    align-vertical: middle;
}

/* === Flash Animation for Value Updates === */

@keyframes flash {
    0% { background: rgba(193, 95, 60, 0.3); }
    100% { background: transparent; }
}

.value-updating {
    animation: flash 300ms ease-out;
}

/* === Reduced Motion Support === */

/* Respect user's motion preferences for accessibility */
@media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}
