/* Sparkline Widget */
SparklineWidget {
    width: 1fr;
    height: 1;
    background: transparent;
    color: $accent;
}

/* Progress Bar Widget */
ProgressBarWidget {
    width: 100%;
    height: 1;
    color: $text-muted;
}

/* Status Badge Widget */
StatusBadgeWidget {
    width: auto;
    height: 1;
    padding: 0 1;
    background: $bg-elevated;
    color: $text-primary;
    text-style: bold;
}

.badge-live {
    color: $success;
    border-left: thick $success;
}

.badge-stopped {
    color: $error;
    border-left: thick $error;
}

.badge-syncing {
    color: $warning;
    border-left: thick $warning;
}
